
<%= form_for @group do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: 'Enter your full name' %>
  </div>
  <div class="field">
    <%= f.label :icon %>
    <%= f.text_field :icon, placeholder: 'Add icon URL (e.g. http://splash.com/img.png)' %>
  </div>
  <div class="actions mt-5">
    <%= f.submit 'Save', class: 'submit' %>
  </div>
<% end %>