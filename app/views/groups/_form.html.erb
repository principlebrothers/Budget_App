
<%= form_for @group do |f| %>
  <div class="form__field">
    <%= f.text_field :name, placeholder: 'Enter your full name' %>
  </div>
  <div class="form__field">
    <%= f.text_field :icon, placeholder: 'Add icon URL (e.g. http://splash.com/img/)' %>
  </div>
  <div class="form__field">
    <%= f.submit 'Create' %>
  </div>
<% end %>