<header class="header flex">
  <h2>Forgot your password?</h2>
  <span>
    <%= link_to "Sign up", new_registration_path(resource_name), class: 'header-action' %>
  </span>
</header>
<section class="access flex">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'youremail@mail.com' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:'btn' %>
    </div>
  <% end %>
  <div class="options flex">
    <%= render "devise/shared/links" %>
  </div>
</section>
